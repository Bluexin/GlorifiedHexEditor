<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <!-- encoders are assigned the type
             ch.qos.logback.classic.encoder.PatternLayoutEncoder by default -->
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %highlight(%level) [%thread] %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="info">
        <appender-ref ref="STDOUT"/>
    </root>
    <logger name="be.bluexin.ghe.io.LayoutLoader" level="info"/>
    <logger name="be.bluexin.ghe.io.DataFileHandler" level="info"/>
    <logger name="be.bluexin.ghe.io.WatchServiceHelper" level="info"/>
    <logger name="be.bluexin.ghe.json.DataLayout" level="info"/>
</configuration>